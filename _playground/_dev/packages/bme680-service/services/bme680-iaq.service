[Unit]
Description=BME680 IAQ Monitor Service
After=network.target mqtt.service
Wants=network-online.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/.local/share/bme680-service
Environment="PATH=/home/pi/.local/share/bme680-service/.venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/pi/.local/share/bme680-service/.venv/bin/python /home/pi/.local/share/bme680-service/monitor-iaq.py --monitor --mqtt
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=bme680-iaq

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/home/pi/.local/share/bme680-service

[Install]
WantedBy=multi-user.target
